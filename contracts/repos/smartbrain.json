{
  "$schema": "../repositories/contract.schema.json",
  "version": "1.0.0",
  "type": "repository",
  "metadata": {
    "name": "smartbrain",
    "description": "SmartBrain runner infrastructure for autonomous agent execution in CyberAi ecosystem",
    "owner": "SolanaRemix",
    "repository": "https://github.com/SolanaRemix/SmartBrain",
    "documentation": "https://cyberai.network/docs/ecosystem/smartbrain",
    "tags": ["runner", "infrastructure", "agent-execution"]
  },
  "capabilities": {
    "endpoints": [
      {
        "path": "/api/runners/status",
        "method": "GET",
        "description": "Get status of all active runners"
      },
      {
        "path": "/api/runners/trigger",
        "method": "POST",
        "description": "Trigger agent execution on SmartBrain runner"
      }
    ],
    "actions": [
      {
        "name": "discover-contracts",
        "description": "Discover and consume contracts from CyberAi control plane",
        "parameters": {
          "contractPath": "string",
          "updateInterval": "number"
        }
      },
      {
        "name": "execute-agent",
        "description": "Execute an agent based on contract definition",
        "parameters": {
          "agentContract": "string",
          "context": "object"
        }
      }
    ],
    "workflows": [
      "contract-sync",
      "agent-execution",
      "health-check"
    ]
  },
  "requirements": {
    "runtime": "node:20",
    "dependencies": [
      "openai>=6.0.0",
      "express>=4.18.0"
    ],
    "permissions": [
      "read:contracts",
      "write:logs",
      "execute:agents"
    ]
  },
  "compliance": {
    "security": {
      "audited": false,
      "lastAuditDate": null
    },
    "certifications": []
  }
}
