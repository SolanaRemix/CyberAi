---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Reset Password - CyberAi Network">
  <main>
    <div class="reset-container">
      <div class="reset-card neo-card neo-glow-primary">
        <div class="logo-section">
          <h1 class="neo-text-glow">üîí CyberAi</h1>
          <p>Reset your password</p>
        </div>

        <form id="reset-form" class="auth-form">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="you@example.com" 
              required 
              class="neo-input"
            />
            <small>Enter your email address and we'll send you a link to reset your password.</small>
          </div>

          <button type="submit" class="neo-button neo-glow-primary submit-button">
            Send Reset Link
          </button>

          <div class="back-link">
            <a href="/login">‚Üê Back to Login</a>
          </div>
        </form>

        <div id="success-message" class="success-message" style="display: none;">
          <div class="success-icon">‚úÖ</div>
          <h3>Check your email</h3>
          <p>If an account exists with this email address, you'll receive password reset instructions shortly.</p>
          <p class="note">Didn't receive the email? Check your spam folder or <a href="#" id="resend-link">resend the link</a>.</p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, rgba(79, 70, 229, 0.05), rgba(6, 182, 212, 0.05));
  }

  .reset-container {
    max-width: 500px;
    width: 100%;
  }

  .reset-card {
    padding: 3rem;
  }

  .logo-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .logo-section h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--neo-primary);
  }

  .logo-section p {
    color: #666;
    font-size: 1.1rem;
  }

  .auth-form {
    margin-bottom: 0;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #555;
    font-weight: 600;
  }

  .neo-input {
    width: 100%;
    padding: 1rem;
    border: 2px solid var(--glass-border);
    border-radius: 8px;
    font-size: 1rem;
    transition: all var(--transition-fast);
    background: var(--glass-bg);
  }

  .neo-input:focus {
    outline: none;
    border-color: var(--neo-primary);
    box-shadow: var(--glow-sm) var(--neo-primary);
  }

  .form-group small {
    display: block;
    margin-top: 0.5rem;
    color: #888;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .submit-button {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .back-link {
    text-align: center;
  }

  .back-link a {
    color: var(--neo-primary);
    text-decoration: none;
    font-weight: 600;
  }

  .back-link a:hover {
    text-decoration: underline;
  }

  .success-message {
    text-align: center;
  }

  .success-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .success-message h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--neo-success);
  }

  .success-message p {
    color: #666;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .success-message .note {
    font-size: 0.9rem;
    color: #888;
  }

  .success-message a {
    color: var(--neo-primary);
    text-decoration: none;
    font-weight: 600;
  }

  .success-message a:hover {
    text-decoration: underline;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .reset-card {
      padding: 2rem 1.5rem;
    }

    .logo-section h1 {
      font-size: 2rem;
    }
  }
</style>

<script>
  // Handle reset form
  document.getElementById('reset-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    const email = formData.get('email');
    
    // TODO: Integrate with Firebase/Auth0
    console.log('Password reset request for:', email);
    
    // Show success message
    document.getElementById('reset-form').style.display = 'none';
    document.getElementById('success-message').style.display = 'block';
  });

  // Handle resend link
  document.getElementById('resend-link')?.addEventListener('click', (e) => {
    e.preventDefault();
    alert('A new reset link has been sent to your email.');
    // TODO: Implement actual resend logic
  });
</script>
