<style>
  .docs-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .docs-container {
    padding: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--neo-primary);
  }

  .last-updated {
    color: #888;
    font-style: italic;
    margin-bottom: 2rem;
  }

  .doc-section {
    margin: 2.5rem 0;
  }

  .doc-section h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--neo-accent);
  }

  .doc-section p {
    line-height: 1.8;
    color: #555;
    margin-bottom: 1rem;
  }

  .doc-section ul {
    margin-left: 2rem;
    line-height: 1.8;
    color: #555;
  }

  .doc-section ul li {
    margin-bottom: 0.5rem;
  }

  .related-docs {
    background: var(--glass-bg);
    border-radius: 12px;
    padding: 1.5rem;
    margin-top: 3rem;
  }

  .related-docs h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--neo-primary);
  }

  .related-docs ul {
    list-style: none;
    padding: 0;
  }

  .related-docs li {
    margin-bottom: 0.5rem;
  }

  a {
    color: var(--neo-primary);
    text-decoration: none;
    font-weight: 600;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .docs-container {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .doc-section h2 {
      font-size: 1.5rem;
    }
  }
</style>
