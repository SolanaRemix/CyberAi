{
  "agents": [
    {
      "name": "cyberai-repo-agent",
      "description": "CyberAi repository control-plane agent for automated governance and fleet management",
      "version": "1.0.0",
      "allowlist": ["telemetry.astro.build", "astro.build", "registry.npmjs.org", "nodejs.org"],
      "capabilities": ["code-review", "auto-fix", "security-scan", "dependency-management"],
      "permissions": {
        "read": ["contents", "metadata", "pull-requests", "issues"],
        "write": ["contents", "pull-requests"]
      }
    }
  ],
  "firewall": {
    "enabled": true,
    "mode": "allowlist",
    "enforce_https": true,
    "block_telemetry": true
  }
}
